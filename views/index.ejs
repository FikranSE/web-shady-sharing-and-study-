          <% } %>
        </div>
        <span class="time">
          <%= moment(kuisioner.created_at).fromNow() %>
        </span>
      </div>
      <div class="bottom">
        <span class="kategori kategori-3">Kuisioner - <%= kuisioner.matkul %></span>
        <a href="/accounts/<%= kuisioner.id_user %>" class="name text-decoration-none"><%= kuisioner.username %></a>
        <a href="/detail-kuisioner/<%= kuisioner.id_kuisioner %>"  class="title text-decoration-none"><%= kuisioner.title %></a>
        <div class="excerpt"><%= kuisioner.excerpt %></div>
        <div class="btn-item mt-4 d-flex gap-1">
          <a href="/detail-kuisioner/<%= kuisioner.id_kuisioner %>"  class="view bg-light" style="vertical-align:middle"><span>View</span></a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>