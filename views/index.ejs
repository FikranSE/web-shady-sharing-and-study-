<div class="top-index">
  <div class="my-post-title">
    <h4>Posts</h4>
    <p>Hey there, welcome back to Projects Sharing!</p>
  </div>
  <div class="add-post d-flex m-3 ms-4">
    <a href="/post" class="Btn text-decoration-none">
      <div class="text">Post Project</div>
    </a>
    <a href="/post-kuisioner" class="Btn btn-kuis text-decoration-none">
      <div class="text">Post Kuisioner</div>
    </a>
 </div>
</div>
  <div class="wrapper-projects-home">
    <% projects.forEach(function(project) { %>
    <div class="item">
      <div class="top">
        <div class="pic">
          <% if (project.avatar) { %>
            <img class="user" src="/img/<%= project.avatar %>">
          <% } else { %>
            <img src="./img/user.png"  >
          <% } %>
        </div>
        <span class="time">
          <%= moment(project.created_at).fromNow() %>
        </span>
      </div>
      <div class="bottom">
        <span class="kategori"><%= project.categori %> - <%= project.matkul %></span>
        <a href="/accounts/<%= project.id_user %>" class="name text-decoration-none"><%= project.username %></a>
        <a href="/detail/<%= project.id_post %>"  class="title text-decoration-none"><%= project.title %></a>
        <div class="excerpt"><%= project.excerpt %></div>
        <div class="btn-item mt-4 d-flex gap-1">
          <a href="/download/<%= project.id_user %>/<%= project.id_post %>" class="button" style="vertical-align:middle"><span>Download</span></a>
          <a href="/detail/<%= project.id_post %>"  class="view bg-light" style="vertical-align:middle"><span>View</span></a>
        </div>
      </div>
    </div>
    <% }); %>
    <% moduls.forEach(function(modul) { %>
    <div class="item">
      <div class="top">
        <div class="pic">
          <% if (modul.avatar) { %>
            <img class="user" src="/img/<%= modul.avatar %>">
