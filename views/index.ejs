      </div>
      <div class="bottom">
        <span class="kategori kategori-2"><%= modul.categori %> - <%= modul.matkul %></span>
        <a href="/accounts/<%= modul.id_user %>" class="name text-decoration-none"><%= modul.username %></a>
        <a href="/detail/<%= modul.id_post %>"  class="title text-decoration-none"><%= modul.title %></a>
        <div class="excerpt"><%= modul.excerpt %></div>
        <div class="btn-item mt-4 d-flex gap-1">
          <a href="/download/<%= modul.id_user %>/<%= modul.id_post %>" class="button" style="vertical-align:middle"><span>Download</span></a>
          <a href="/download/<%= modul.id_user %>/<%= modul.id_post %>"  class="view bg-light" style="vertical-align:middle"><span>View</span></a>
        </div>
      </div>
    </div>
    <% }); %>
    <% kuisioners.forEach(function(kuisioner) { %>
