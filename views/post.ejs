
<form action="/publish" class="form-post" enctype="multipart/form-data" method="post">
  <h5>Add Modul or Project</h5>
  <div class="mb-3">
    <input type="text" class="title" name="title" placeholder="Enter title here" required>
  </div>
  <div class="mb-3">
    <input type="text" class="excerpt" name="excerpt" placeholder="Short description (25 words)" required>
  </div>
  <div class="mb-3 select-container">
    <select name="id_categori" class="custom-select" required>
      <option selected>Choose categories</option>
      <% categoriData.forEach(function(category) { %>
        <option value="<%= category.id_categori %>"><%= category.categori %></option>
      <% }); %>
    </select> 
  </div>
  <div class="mb-3 select-container">
    <select name="id_matkul" class="custom-select" required>
      <option selected>Choose Mata Kuliah</option>
      <% matkul.forEach(function(matkul) { %>
        <option value="<%= matkul.id_matkul %>"><%= matkul.matkul %></option>
      <% }); %>
    </select> 
  </div>
  <div class="mb-3 con-file">
    <input type="file" name="uploaded_file" id="uploadBtn" onchange="updateFileName(this)">
    <label for="uploadBtn" id="fileLabel">Choose file</label>
    <input type="text" id="selectedFileName" name="uploaded_file">
  </div>
  <input id="body" type="hidden" name="description">
  <trix-editor input="body"></trix-editor>
  <div class="mt-3 con-btn">
    <a href="/projects" class="btn-cancel">Cancel</a>
    <button type="submit" class="btn-publish">Publish</button>
  </div>
</form>


