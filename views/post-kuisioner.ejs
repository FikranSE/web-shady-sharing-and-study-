
<form action="/publish-kuisioner" class="form-post"  method="post">
  <h5>Add Kuisioner</h5>
  <div class="mb-3">
    <input type="text" class="title" name="title" placeholder="Enter title here" required>
  </div>
  <div class="mb-3">
    <input type="text" class="excerpt" name="excerpt" placeholder="Short description (25 words)" required>
  </div>
  <div class="mb-3 select-container">
    <select name="id_matkul" class="custom-select" required>
      <option selected>Choose Mata Kuliah</option>
      <% matkul.forEach(function(matkul) { %>
        <option value="<%= matkul.id_matkul %>"><%= matkul.matkul %></option>
      <% }); %>
    </select> 
  </div>
  <input id="body" type="hidden" name="description" required>
  <trix-editor input="body"></trix-editor>
  <div class="mt-3 con-btn">
    <a href="/projects" class="btn-cancel">Cancel</a>
    <button type="submit" class="btn-publish">Publish</button>
  </div>
</form>


<script>
  document.addEventListener('trix-file-accept', function(e){
    e.preventDefault();
  })  
</script>